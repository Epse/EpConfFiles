! Enabled modi
rofi.modi:                           drun,window,ssh,run

! Window opacity
rofi.opacity:                        90

! Window width
rofi.width:                          100

! Number of lines
rofi.lines:                          5

! Font to use
rofi.font:                           Fira Code 20

! Color scheme for normal row        bg        fg     bgalt   hlbg      hlfg
rofi.color-normal:                   #292B2E,#cccccc,#292B2E,#292B2E,#c56ec3

! Color scheme for active row
rofi.color-active:                   #292B2E,#cccccc,#292B2E,#292B2E,#c56ec3

! Color scheme window
rofi.color-window:                   #292B2E,#292B2E

! Padding
rofi.padding:                        200

! Y-offset relative to location
! rofi.yoffset:                        -70

! Terminal to use
rofi.terminal:                       urxvt

! Run command to execute
rofi.run-command:                    {cmd}

! Row height (in chars)
rofi.eh:                             1

! Do a more fuzzy matching
rofi.fuzzy:                          true

! Separator style (none, dash, solid)
rofi.separator-style:                solid

! Hide scroll-bar
rofi.hide-scrollbar:                 true

